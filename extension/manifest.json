{
  "manifest_version": 3,
  "name": "Interguide Extension",
  "version": "0.5.0",
  "description": "Capability-based workspace binding with active walkthrough/onboarding engine. Zero cookies, zero auth.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://api.interguide.app/*", "<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "walkthrough-overlay.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["walkthrough-models.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
