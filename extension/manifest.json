{
  "manifest_version": 3,
  "name": "Interguide Walkthrough Overlay",
  "version": "0.3.0",
  "description": "Displays contextual Interguide walkthroughs via browser extension.",
  "permissions": ["storage", "cookies"],
  "host_permissions": ["https://api.interguide.app/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
